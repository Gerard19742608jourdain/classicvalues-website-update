{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": [
      "firebase.json",
      "**/.*",
      "tool",
      "src",
      "**/node_modules/**"
      ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
        "npm --prefix \"%RESOURCE_DIR%\" run lint",
        "npm --prefix \"%RESOURCE_DIR%\" run build"
      ]
    }
}
